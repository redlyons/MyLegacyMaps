@model IEnumerable<MyLegacyMaps.Models.Map>
@{
    ViewBag.Title = "Manage Maps";
}
<h2>Manage Maps</h2>

@using (Html.BeginForm())
{
    <p>
       @Html.DropDownList("ddlMapTypeId", (SelectList)ViewBag.MapTypes, "-- All --")  <input type="submit" value="submit" />
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>       
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
      
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.MapId }) |
                @Html.ActionLink("View", "Details", new { id=item.MapId })
                @Html.ActionLink("Delete", "Delete", new { id=item.MapId })
            </td>
        </tr>
    }

    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
