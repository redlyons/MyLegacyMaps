@model MyLegacyMaps.Models.Map
@{
    ViewBag.Title = "Map Details";
}
@section Scripts{      
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/mlm")
}
@using (Html.BeginForm("Create", "AdoptedMaps", FormMethod.Post, new { id = "frmAdpotMap" }))
{  
    
    @Html.Partial("~/Views/Shared/Partials/MapCanvas.cshtml", Model)
    @Html.AntiForgeryToken();
    @Html.Hidden("mapId", Model.MapId);    
    @Html.Hidden("mapFileName", Model.FileName) 
    @Html.Hidden("mapImageUrl", Model.GetMainImageUrl())
    @Html.Hidden("mapOrientation", Model.OrientationTypeId)
    @Html.Hidden("name", Model.Name) 
    @Html.Hidden("description", Model.Description)  
}


 
