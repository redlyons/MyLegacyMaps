@model  PagedList.IPagedList<MyLegacyMaps.Models.Map >
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}
<h2>Maps</h2>

@using (Html.BeginForm("Index","Maps",FormMethod.Get))
{
    <p>
       @Html.DropDownList("ddlMapTypeId", (SelectList)ViewBag.MapTypes, "-- All --")  <input type="submit" value="submit" />
    </p>   
}
<div class="grid">
    @foreach (var item in Model)
    {
        <div class="grid-item">
            <a href="@Url.Action("Details", new { id = item.MapId })">
                <img src="@item.GetThumbImageUrl()" height="310" width="310" class="mlm-li-thumb">
                <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                <p>@Html.DisplayFor(modelItem => item.Description)</p>
            </a>
        </div>
    }
</div>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))

<script>
    $(document).ready(function () {

        $('.grid').masonry({
            itemSelector: '.grid-item',
            columnWidth: 310
        });

    });
</script>
    
