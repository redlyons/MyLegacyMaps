@model IEnumerable<MyLegacyMaps.Models.Map>
@{
    ViewBag.Title = "Index";
}
<h2>Maps</h2>

@using (Html.BeginForm())
{
    <p>
       @Html.DropDownList("ddlMapTypeId", (SelectList)ViewBag.MapTypes, "-- All --")  <input type="submit" value="submit" />
    </p>
   

  
    
}
<div class="grid">
    @foreach (var item in Model)
    {
        <div class="grid-item">
            <a href="@Url.Action("Details", new { id = item.MapId })">
                <img src="@item.GetMainImageUrl()" height="310" width="310" class="mlm-li-thumb">
                <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                <p>@Html.DisplayFor(modelItem => item.Description)</p>
            </a>
        </div>
    }
</div>

<script>
    $(document).ready(function () {

        $('.grid').masonry({
            itemSelector: '.grid-item',
            columnWidth: 310
        });

    });
</script>
