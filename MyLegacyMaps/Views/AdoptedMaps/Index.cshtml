@model IEnumerable<MyLegacyMaps.Models.AdoptedMap>

@{
    ViewBag.Title = "Index";
}

<h2>Adopted Maps</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShareStatus)
        </th>
        <th>
            File Name
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShareStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AdoptedMapId }) |
            @Html.ActionLink("View", "Details", new { id=item.AdoptedMapId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AdoptedMapId })
        </td>
    </tr>
}

</table>
