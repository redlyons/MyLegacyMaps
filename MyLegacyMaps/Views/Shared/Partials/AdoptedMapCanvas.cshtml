@model MyLegacyMaps.Models.Map


<div class="container-fluid">
    <div class="row-fluid">
        <div class="canvasWrapper span12">
            <ul class="canvasToolList">
                <li>
                    <a id="btnWasHere" href="#" class="btn btn-info btn-sm"><img class="flag-icon" src="~/Images/icons/red-flag-icon.png" />I was here</a>
                </li>
                <li>
                    <a id="btnHereNow" href="#" class="btn btn-info btn-sm"><img class="flag-icon" src="~/Images/icons/checked-flag-icon.png" />I'm here now</a>
                </li>
                <li>
                    <a id="btnWantToGoHere" href="#" class="btn btn-info btn-sm"><img class="flag-icon" src="~/Images/icons/yellow-flag-icon.png" />Planning to go</a>
                </li>
                <li class="">
                    <a id="lnkSaveMap" href="#" class="btn btn-info btn-sm btnSaveMap"><span class="glyphicon glyphicon-floppy-disk"></span> Save</a>
                </li>
                <li>
                    <div class="sliderWrapper">
                        <a href="#" id="zoomIn"><span class="glyphicon glyphicon-minus"></span></a>
                        <input id="zoomSlider" type="range" value="1" min=".5" max="1.5" step=".01">
                        <a href="#" id="zoomOut"><span class="glyphicon glyphicon-plus"></span></a>
                    </div>
                </li>
            </ul>           
            <div id="canvas"></div>              
        </div>
    </div>   
</div>



