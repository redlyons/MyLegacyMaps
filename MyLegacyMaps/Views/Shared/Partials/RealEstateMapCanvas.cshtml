@model MyLegacyMaps.Models.Map

<div class="container-fluid">
    <div class="row-fluid">
        <div class="" style="margin-top:5px;">
            <div class="">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="ddlPartnerLogos"
                            data-toggle="dropdown">
                        <span>Choose Logo:&nbsp;</span>&nbsp;<span class="caret"></span>
                    </button>
                    &nbsp;<a id="btnPartnerLogo" href="#" class=""><img id="imgLogo" class="" src="" /></a>
                    <input id="hdnPartnerLogoId" type="hidden" />
                    <ul class="dropdown-menu" role="menu">
                        @foreach (var logo in (List<MyLegacyMaps.Models.PartnerLogo>)ViewBag.PartnerLogos)
                        {
                            <li role="presentation" onclick="onLogoTypeSelected('@logo.PartnerLogoId', '@logo.Name', '@logo.ImageUrl')">
                                <a role="menuitem" href="#">@logo.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        

        <div class="canvasWrapper span12">
            <h3>@Html.DisplayFor(model => Model.Name)</h3>
            <ul class="canvasToolList">              
                <li>
                    <div class="sliderWrapper">
                        <a href="#" id="zoomIn"><span class="glyphicon glyphicon-minus"></span></a>
                        <input id="zoomSlider" type="range" value="1" min=".5" max="1" step=".01">
                        <a href="#" id="zoomOut"><span class="glyphicon glyphicon-plus"></span></a>
                    </div>
                </li>
            </ul>           
            <div id="canvas"></div>    
                 
        </div>
    </div>   

    <script type="text/javascript">
    function onLogoTypeSelected(id, value, imageUrl) {
        $('#hdnPartnerLogoId').val(id);
        $('#imgLogo').attr("src", imageUrl);
       


      //  background-image: url("../../images/icons/yellow-flag-sm.png");

    }
    </script>

</div>



